<div class='name'><label>name: {{input type='text' value=autosaveModel.name}}</label></div>

{{#each model.skills as |skill|}}

  <div class='skill'>

    {{#link-to 'skills.edit' skill}}{{skill.name}}{{/link-to}}

  </div>

{{/each}}

<div class='skill'>{{skill-select skillDefinitions=skillDefinitions selectSkill=(action (mut selectedSkill)) tagName='span'}} <button {{action 'addSkill'}}>Add Skill</button></div>

<div class='skill'><button {{action 'createSkill'}}>New Skill</button></div>