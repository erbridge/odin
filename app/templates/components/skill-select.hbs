{{#each skills as |skill|}}

  <div class='skill'>

    {{#if editable}}

      {{#link-to 'skills.edit' skill}}{{skill.name}}{{/link-to}}

    {{else}}

      {{skill.name}}

    {{/if}}

  </div>

{{/each}}

{{#if editable}}

  <div class='skill'><button {{action 'createSkill'}}>New Skill</button></div>

{{/if}}
